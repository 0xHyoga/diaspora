{{#if likesCount}}
  <div class="media">
    <div class="media-object media-left">
      <i class="entypo-heart"></i>
    </div>

    <div class="media-body">
      {{#unless likes_fetched}}
        <a href="#" class="expand_likes grey">
          {{t "stream.likes" count=likesCount}}
        </a>

      {{else}}

        {{#each likes}}
          {{#linkToAuthor author}}
            {{{personImage this 'small' 'micro'}}}
          {{/linkToAuthor}}
        {{/each}}
      {{/unless}}
    </div>
  </div>
{{/if}}
